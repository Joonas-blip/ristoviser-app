<h1>Search for a User</h1>

<%= simple_form_for :search, url: new_friendship_path, method: :get do |f| %>
  <div class="formdevise">
  <%= f.input :selection, placeholder: 'Search for a User' %>
  <%= f.button :submit, class: "button-large" %>
  </div>
<% end %>

<% @users.each do |user| %>
  <% if user.id != @current_user.id %>
    <p><%= image_tag(user.avatar_url) %></p>
    <p><%= link_to "#{user.first_name} #{user.last_name}" %></p>
    <%= link_to "Add friend", friendships_path(user), method: :post, class: "button-large" %>
  <% end %>
<% end %>
