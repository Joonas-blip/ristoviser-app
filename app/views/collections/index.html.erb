<h1 style="margin-bottom: 5vh;">Your Lists</h1>

<%= link_to "Create A New List", new_collection_path, class: "button-large" %>


<% @collections.each do |collection| %>
  <div class="list-card-share">
    <div class="card-image">
      <%= cl_image_tag collection.photo.key, crop: :fill %>
    </div>

    <div class="card-details" style="height: 7vh;">
      <div class="card-name-description">
        <p style="font-size: 18px; letter-spacing: 1px;"><strong><%= link_to collection.name, collection_path(collection[:id]) %></strong></p>
      </div>

      <div class="list-share-buttons">
        <div id="share-button" class="list-buttons" data-url="<%= "#{request.original_url}/#{collection.id}" %>">
          <%= image_tag("share.png") %>
        </div>
      </div>
    </div>
  </div>
<% end %>
