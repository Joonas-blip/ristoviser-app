<h1>Your Lists</h1>

<%= link_to "Add a new List", new_collection_path, class: "button-large" %>

<% @collections.each do |collection| %>
  <div class="list-card-share">
    <div class="card-image">
      <img src="https://images.unsplash.com/photo-1466978913421-dad2ebd01d17?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8cmVzdGF1cmFudHxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=800&q=60" alt="restaurant image placeholder">
    </div>

    <div class="card-details" style="height: 7vh;">
      <div class="card-name-description">
        <p style="font-size: 18px; letter-spacing: 1px;"><strong><%= collection.name %></strong></p>
      </div>

      <div class="list-share-buttons">
        <%= link_to image_tag("view.png"), collection_path(collection[:id]), class: "list-buttons view" %>
        <div id="share-button" class="list-buttons" data-url="<%= "#{request.original_url}/#{collection.id}" %>">
          <%= image_tag("share.png") %>
        </div>
      </div>
    </div>
  </div>
<% end %>
