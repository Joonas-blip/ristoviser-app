<div class="back-arrow">
<%= link_to image_tag("arrow-back.png"), :back %>
</div>


  <h1 style="margin-bottom: 5vh;"><%= @user.first_name %>'s Profile</h1>

  <div class="profile-avatar-big">
    <p><%= image_tag(@user.avatar_url) %></p>
  </div>

  <div class="name-list">
    <p><strong><%= @user.first_name %> <%= @user.last_name %></strong></p>
    <p ><%= pluralize(@user.collections.count, 'list')%></p>
  </div>

  <div class="user-lists">
    <h5><%= @user.first_name %>'s Lists (<%= @user.collections.count %>)</h5>
  </div>

  <br>
  <br>
<% @user.collections.each do |collection| %>
  <div class="list-card-share">
    <div class="card-image">
      <%= cl_image_tag collection.photo.key, crop: :fill %>
    </div>

    <div class="card-details" style="height: 7vh;">
      <div class="card-name-description">
        <p style="font-size: 18px; letter-spacing: 1px;"><strong><%= link_to collection.name, collection_path(collection[:id]) %></strong></p>
      </div>
    </div>
  </div>
<% end %>
</div>
