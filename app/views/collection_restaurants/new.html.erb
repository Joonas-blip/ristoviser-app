<h1>Add a Restaurant</h1>

<br>

<%= simple_form_for :search, url: new_collection_collection_restaurant_path, method: :get,  html: { id: :search } do |f| %>
  <div class="formdevise">
  <%= f.input :selection, placeholder: 'Select a restaurant name', input_html: { id: 'query'} %>
  <%= f.button :submit, class: "button-large",  id: 'btn-search' %>
  </div>
<% end %>


<% @restaurants.each do |rest|  %>
  <div class="restaurant-card-add">

    <div class="card-image">
      <img src="<%= rest.photo %>" alt="restaurant image placeholder">
    </div>

    <div class="card-details">

      <div class="card-name-description">
        <p><strong><%= rest.name %></strong></p>
        <p><small><%= rest.address %></small></p>
      </div>

      <div class="add-button">
        <%= link_to image_tag("add.png"), collection_collection_restaurants_path(@collection, rest.id), class: "add", method: :post, action: :create %>
      </div>

    </div>

  </div>

<% end %>
