<div class="back-arrow">
<%= link_to image_tag("arrow-back.png"), dashboards_path %>
</div>


<div class="friendships-page">
<h1 style="margin-bottom: 5vh;">Your Pending Requests</h1>
<br>
<div class="profile-container">
  <% @friends.each do |user| %>
    <div class="profile-card">
      <div class="profile-avatar">
          <p><%= image_tag(user.avatar_url) %></p>
      </div>
      <div class="profile-details">
          <p><%= "#{user.first_name} #{user.last_name}" %></p>
          <p class="friend-location"><%= user.location %></p>
      </div>
      <div class="send-request">
        <%= link_to "CONFIRM", confirm_friendship_path(user), class: "confirm button-large" %>
        <%= link_to "DELETE", "#", class: "delete button-large view" %>
      </div>
    </div>
  <% end %>
</div>
</div>
