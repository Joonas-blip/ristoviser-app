<div>
  <h3><%= @restaurant.name %></h3>
  <p><%= @restaurant.street_address %></p>
  <div class="card-image">
    <img src="<%= @restaurant.photo %>"  alt="restaurant image placeholder">
  </div>
  <div>
    <p><%= @note.content%></p>
  </div>
  <div class="button-large">
    <%= button_to "Get Directions", "https://www.google.com/maps/dir/?api=1&destination=" + @restaurant.name.gsub(" ", "+"), class: "button-large" %>
  </div>
</div>
